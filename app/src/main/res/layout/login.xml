<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"

    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo"
        android:id="@+id/logo"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/logo"
android:textColor="#FFFFFF"
    android:id="@+id/sampletext"
    android:layout_centerHorizontal="true"
    android:text="Welcomme to SkooCart"
    android:layout_marginTop="15dp"
    />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Parent"
        android:layout_marginRight="5dp"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:background="@drawable/button"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="65dp"
        android:id="@+id/parent"
        android:drawableLeft="@drawable/ic_parent_on"
        android:layout_below="@+id/sampletext"
        android:layout_marginLeft="65dp"
        android:textAllCaps="false"



        ></Button>
    <Button
        android:layout_width="130dp"
        android:layout_marginLeft="5dp"
        android:layout_height="40dp"
        android:text="Guest"
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:background="@drawable/guestbutton"
        android:paddingRight="10dp"
      android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:id="@+id/guest"
        android:drawableLeft="@drawable/guest"
        android:layout_below="@+id/sampletext"
        android:layout_marginRight="65dp"
        android:textAllCaps="false"



        ></Button>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"

        android:layout_marginTop="300dp"
        android:src="@drawable/ic_user"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="50dp"

        android:layout_marginTop="369dp"
        android:src="@drawable/ic_padlock"

        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:id="@+id/lay1"
        android:layout_below="@+id/parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="90dp"


        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColor="@color/white"
            android:id="@+id/username"
            android:textColorHint="@color/Orange"

            />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="95dp"
        android:id="@+id/lay2"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/Orange"


        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/Orange"

            />


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot password?"
        android:id="@+id/forget"
        android:layout_marginTop="410dp"
        android:textColor="@color/Orange"

        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        />
    <Button
        android:layout_width="300dp"
        android:id="@+id/login"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_below="@+id/forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/login"
        android:layout_height="45dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/facebook"
        android:layout_below="@+id/login"
        android:layout_marginTop="30dp"
        android:id="@+id/facebook"
        android:paddingLeft="10dp"
        android:layout_marginLeft="70dp"
        android:drawableLeft="@drawable/facebooks"
        android:text="Facebook"
        android:textAllCaps="false"
        android:textColor="@color/white"

        />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/googleplus"
        android:layout_below="@+id/login"
        android:layout_marginTop="30dp"
        android:id="@+id/gpluss"
        android:paddingLeft="10dp"
      android:layout_alignParentRight="true"
        android:layout_marginRight="70dp"
        android:drawableLeft="@drawable/ic_gplus"
        android:text="Google"
        android:textAllCaps="false"
        android:textColor="@color/white"

        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/gpluss"
    android:text="Need account?"
    android:textColor="@color/Orange"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="125dp"
    android:id="@+id/signup"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_below="@+id/gpluss"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/signup"

        android:layout_marginLeft="10dp"
        />

</RelativeLayout>